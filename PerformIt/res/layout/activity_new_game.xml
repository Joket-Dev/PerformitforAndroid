<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_color"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/create_game_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/layout_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_game_popup_bg1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/create_game_textView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Create a new game"
                android:paddingTop="20dp"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/white_round"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/mail_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_game_email_button" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/facebook_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_game_facebook_button" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/username_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_game_username_button" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/random_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_game_random_button" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_close_linearLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/layout_c"
            android:layout_alignTop="@+id/layout_c" >
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/email_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/layout_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_game_popup_bg1"
            android:orientation="vertical"
            android:gravity="center" >
            
            <TextView
                android:id="@+id/create_email_textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="EMAIL INVITE"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/email_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:hint="Email address"
                android:singleLine="true"
                android:ems="10" >
            </EditText>

            <TextView
                android:id="@+id/send_email_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="SEND E-MAIL"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/email_invitation_send_button" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_close_linearLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/layout_e"
            android:layout_alignTop="@+id/layout_e" >
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/username_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/layout_u"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_game_popup_bg1"
            android:orientation="vertical"
            android:gravity="center" >
            
            <TextView
                android:id="@+id/create_username_textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="USERNAME INVITE"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/username_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:hint="Username"
                android:singleLine="true"
                android:ems="10" >
            </EditText>

            <TextView
                android:id="@+id/send_username_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="SEND USERNAME"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/email_invitation_send_button" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/username_close_linearLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/layout_u"
            android:layout_alignTop="@+id/layout_u" >
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/facebook_layout"
        android:layout_width="300dp"
        android:layout_height="460dp"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/layout_f"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/facbook_invite_popup_bg"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/create_facebook_textView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:text="FACEBOOK INVITE"
                android:textColor="@color/white"
                android:textSize="16dp" />
            
            <ListView
                android:id="@+id/facebook_listView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp" >
            </ListView>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facebook_close_linearLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/layout_f"
            android:layout_alignTop="@+id/layout_f" >
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>